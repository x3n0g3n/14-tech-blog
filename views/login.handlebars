<div class="main-content">
  <div class="hero">
    <h1>Blog with talented geeks who share your passion for tech in our vibrant community.</h1>
  </div>
  <div class="login-wrapper">
    <div class="ui top attached tabular menu inverted">
      <a class="item active" onclick="toggleTab(event)" data-tab="one">Login</a>
      <a class="item" onclick="toggleTab(event)" data-tab="two">Sign Up</a>
    </div>
    <div class="ui bottom attached tab segment inverted active" id="login" data-tab="one">
      <div class="ui card">
        <div class="content">
          <div class="header">Login</div>
        </div>
        <div class="content">
          <form class="ui form login-form">
            <div class="field">
              <label>Username</label>
              <input id="username" type="text" name="username" placeholder="Username" required>
            </div>
            <div class="field">
              <label>Password</label>
              <input id="password" type="password" name="password" placeholder="Password" required>
            </div>
            <button class="ui button" type="submit">Login</button>
          </form>
          <div class="ui red label hidden username-err">
            <a href="javascript:void(0)" onclick="closeErr('username')"><i class="times icon"></i></a>
            Username is not registered, please sign up.
          </div>
          <div class="ui red label hidden password-err">
            <a href="javascript:void(0)" onclick="closeErr('password')"><i class="times icon"></i></a>
            Incorrect password.
          </div>
        </div>
      </div>
    </div>
    <div class="ui bottom attached tab inverted segment" id="sign-up" data-tab="two">
      <div class="ui card">
        <div class="content">
          <div class="header">Sign Up</div>
        </div>
        <div class="content">
          <form class="ui form signup-form">
            <div class="field">
              <label>Username</label>
              <input id="signup-username" type="text" name="username" placeholder="Username" required>
            </div>
            <div class="field">
              <label>Email</label>
              <input id="signup-email" type="email" name="email" placeholder="Email" required>
            </div>
            <div class="field">
              <label>Password</label>
              <input id="signup-pass" type="password" name="password" placeholder="Password" required>
            </div>
            <button class="ui primary button" type="submit">Sign Up</button>
            <div class="ui red label hidden invalid-email-err">
              <a href="javascript:void(0)" onclick="closeErr('invalid-email')"><i class="times icon"></i></a>
              This email has already been used.
            </div>
            <div class="ui red label hidden password-length-err">
              <a href="javascript:void(0)" onclick="closeErr('password-length')"><i class="times icon"></i></a>
              The password must be 8 characters.
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
<script src="/js/login.js"></script>